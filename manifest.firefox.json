{
  "name": "CHZ Extension",
  "description": "A Chrome extension for Chiliz blockchain interactions",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Open CHZ Extension",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "tabs", 
    "webNavigation",
    "storage",
    "webRequest",
    "declarativeNetRequest",
    "notifications",
    "https://*/*",
    "http://*/*"
  ],
  "optional_permissions": []
}
