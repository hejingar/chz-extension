# Environment variables for Chiliz Backend
# Copy this file to .env and fill in your actual values

# Chiliz RPC Configuration
CHILIZ_WS_URL=wss://spicy-rpc.chiliz.com
CHILIZ_HTTP_URL=https://spicy-rpc.chiliz.com
CHILIZ_CHAIN_ID=88888

# Wallet Configuration
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Smart Contract Configuration
CONTRACT_ADDRESS=your_contract_address_here
CONTRACT_ABI_PATH=./contracts/ChilizReceiver.json

# Staking Contract Configuration (for StakingService)
RPC=https://spicy-rpc.chiliz.com
STAKING_CONTRACT=your_staking_contract_address_here

# Security Configuration
NODE_ENV=development

# Database Configuration (if needed)
# MONGODB_URL=mongodb://localhost:27017/chiliz-backend

# Logging
LOG_LEVEL=info
