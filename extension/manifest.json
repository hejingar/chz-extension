{
  "manifest_version": 3,
  "name": "CHZ Extension",
  "version": "1.0.0",
  "description": "Extension Chrome pour CHZ avec connexion Metamask",
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CHZ Extension",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
    "popup.js",
    "background.js",
        "popup.css",
        "icon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
